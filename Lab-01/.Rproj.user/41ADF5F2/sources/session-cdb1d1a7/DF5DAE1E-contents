# tạo data frame 
column1 <- c(1:3)
column2 <- c("Tung", "Tom", "Anna")
column3 <- c(T, T, F)

dataset1 <- data.frame(column1, column2, column3)
dataset1

#1 tên của các cột
colnames(dataset1)

colnames(dataset1)[2] <- "name"
dataset1

#2 đổi tên nhiều cột
colnames(dataset1) <- c("#", "name", "check")
dataset1

newRow <- c(4, "Dương Domic", T)
dataset2 <- rbind(dataset1, newRow)
dataset2


newRowDF <- data.frame(5, "Lisa", F)
names(newRowDF) <- c("#", "name", "check")
dataset3 <- rbind(dataset2, newRowDF)
dataset3

#3 thêm cột
newColumn <- c("a", "b", "c")
dataset4 <- cbind(dataset1, newColumn)
dataset4

dataset4$newColumn <- c(1,2,3)
dataset4

#4 truy xuất dữ liêu
# truy xuất bằng chỉ số
dataset4[3,2] # dòng 3, cột 2

# truy xuất bằng tên cột
dataset4["name"]
dataset4[, "name"]
dataset4$name

#5. một số hàm cần nhớ
# Các hàm hữu ích để kiểm tra dữ liệu
# head(): hiển thị vài dòng đâu
# taild(): hiển thị vài dòng cuối
# str(): hiển thị đầy đủ dữ liệu
# summary(): tóm tắt thống kê

head(dataset4)
tail(dataset4)
str(dataset4)
summary(dataset4)

#6. thay đổi kiểu dữ liệu của cột
class(dataset4$check)
dataset4$check <- as.integer(dataset4$check)
dataset4

#7. build in data frame
data() # lấy dataset có sẵn trên R
iris
View(iris)

CO2

head(iris)
tail(iris)
summary(iris)
